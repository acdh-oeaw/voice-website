---
import Link from "@/components/link.astro";

interface Props {
	class?: string;
	href: URL | string;
}

const { class: className, ...rest } = Astro.props;
---

<Link
	{...rest}
	class:list={["rounded inline-flex px-4 py-2 transition hover:text-[#212529]", className]}
	data-nav-link
>
	<slot />
</Link>
